<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VentanaDiasActivity">

    <Button
        android:id="@+id/lunesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LUNES"
        app:layout_constraintBottom_toTopOf="@+id/martesButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/volverImageButton" />

    <Button
        android:id="@+id/martesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MARTES"
        app:layout_constraintBottom_toTopOf="@+id/miercolesButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/lunesButton" />

    <Button
        android:id="@+id/miercolesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="MIERCOLES"
        app:layout_constraintBottom_toTopOf="@+id/juevesButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/martesButton" />

    <Button
        android:id="@+id/juevesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="JUEVES"
        app:layout_constraintBottom_toTopOf="@+id/viernesButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/miercolesButton" />

    <Button
        android:id="@+id/viernesButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VIERNES"
        app:layout_constraintBottom_toTopOf="@+id/sabadoButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/juevesButton" />

    <Button
        android:id="@+id/sabadoButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SÁBADO"
        app:layout_constraintBottom_toTopOf="@+id/domingoButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/viernesButton" />

    <Button
        android:id="@+id/domingoButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DOMINGO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/sabadoButton" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <ImageButton
        android:id="@+id/volverImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:contentDescription="back"
        app:layout_constraintStart_toStartOf="@+id/lunesButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back_24px"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="233dp"
        android:layout_height="33dp"
        android:text="Elige el día de la semana que desees"
        app:layout_constraintBottom_toBottomOf="@+id/volverImageButton"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toEndOf="@+id/volverImageButton"
        app:layout_constraintTop_toTopOf="@+id/volverImageButton" />
</androidx.constraintlayout.widget.ConstraintLayout>